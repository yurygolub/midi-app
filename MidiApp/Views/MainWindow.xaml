<Window x:Class="MidiApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        DataContext="{Binding ViewModel, RelativeSource={RelativeSource Self}}"
        Title="MidiApp" Height="450" Width="800">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="View"
                      Padding="2, 1" Margin="2, 1">
                <MenuItem Header="Switch console visibility"
                          Command="{Binding ConsoleVisibilityCommand}"/>
            </MenuItem>

            <MenuItem Header="About"
                      Command="{Binding AboutCommand}"
                      Padding="2, 1" Margin="2, 1"/>
        </Menu>

        <TabControl Grid.Row="1"
                    ItemsSource="{Binding TabCollection}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <TextBlock Text="{Binding Header}"
                                   TextAlignment="Center"
                                   Margin="5"
                                   Padding="5, 0">
                        </TextBlock>
                        
                        <Button Command="{Binding CloseCommand}"
                                Visibility="{Binding CanBeClosed, Converter={StaticResource BooleanToVisibilityConverter}}"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Center"
                                Background="DarkGray"
                                BorderThickness="0"
                                FontSize="10"
                                Width="15"
                                Height="15">
                            X
                        </Button>
                    </StackPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>

            <TabControl.ContentTemplate>
                <DataTemplate>
                    <ContentControl Content="{Binding Content}"/>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</Window>
